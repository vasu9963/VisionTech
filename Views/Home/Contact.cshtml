@section scripts
    {
    <script>
        $(document).ready(function () {
            $('#contact-form').on('submit', function (e) {
                e.preventDefault(); // Prevent default form submission

                var formData = $(this).serialize(); // Serialize the form data

                // Send the form data to the controller via AJAX
                $.ajax({
                    url: '/Contact/Add_Data', // The URL to submit the data
                    type: 'POST', // HTTP method
                    data: formData, // Serialized form data
                    success: function (response) {
                        // If the server responds with success
                        if (response.success == true) {
                            swal({
                                title: "Success!",
                                text: "Data will be sent successfully!",
                                icon: "success"
                            }).then(function () {
                                window.location.reload();
                            });
                        }
                        else {
                            swal({
                                title: "Failed!",
                                text: "Data  not Sent!",
                                icon: "error"
                            }).then(function () {
                                window.location.reload();
                            });
                        }
                      
                    },
                    error: function (xhr, status, error) {
                        // If an AJAX error occurs (e.g., network failure)
                        Swal.fire({
                            title: 'Error!',
                            text: 'An error occurred. Please try again.',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        });

    </script>
}

