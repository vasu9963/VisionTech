

@model TestTemplate.Models.Categorytable
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}

<div class="offset-3" style="margin-top:100px" ;>
    <form method="post" action="/Category/EditCategory" enctype="multipart/form-data">
        <input type="hidden" value="@Model.CategoryID" name="CategoryID" class="form-control" />
        <label>Title</label>
        <input type="text" value="@Model.Title" name="title" class="form-control" />

        <label>Description</label>
        <input type="text" value="@Model.Description" name="description" class="form-control" />

        <label>image</label>
        <input type="file" name="image" class="form-control" />

        <button type="submit" class="btn btn-success">Update Category</button>
    </form>
</div>



