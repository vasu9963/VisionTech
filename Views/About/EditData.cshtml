



@model TestTemplate.Models.Abouttable
@{
    ViewBag.Title = "EditData";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}


<div class="offset-3" style="margin-top:100px" ;>
    <form method="post" action="/About/EditData" enctype="multipart/form-data">
        <input type="hidden" value="@Model.AboutID" name="AboutID" class="form-control" />
        <label>Title</label>
        <input type="text" value="@Model.Title" name="title" class="form-control" />

        <label>Sub-Title</label>
        <input type="text"  value="@Model.Subtitle" name="Subtitle" class="form-control" />

        <label>Description</label>
        <input type="text" value="@Model.Description" name="description" class="form-control" />

        <label>image</label>
        <input type="file" name="image" class="form-control" />

        <button type="submit" class="btn btn-success">Update Data</button>
    </form>
</div>



